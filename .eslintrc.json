{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "semi": [
            "off",
            "always"
        ],
        "quotes": [
            "off",
            "double"
        ],
        "no-unused-vars": [
            "warn"
        ],
        "no-void": [
            "error"
        ],
        "comma-spacing": [
            "warn"
        ],
        "no-extra-semi": [
            "error"
        ],
        "require-await": [
            "warn"
        ],
        "no-const-assign": [
            "error"
        ],
        "no-var": [
            "error"
        ]
    }
}